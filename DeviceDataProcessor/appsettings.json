{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=DeviceDataDb;Trusted_Connection=True;", // رشته اتصال به دیتابیس SQL
    "Redis": "localhost:6379" // رشته اتصال به Redis
  },
  "JwtSettings": {
    "Secret": "YourSuperSecretKeyHere", // کلید مخفی JWT
    "TokenValidityInMinutes": 30 // زمان انقضای توکن به ساعت
  },
  "MqttSettings": {
    "Port": 1883 // پورت سرور MQTT
  },
  "QueueSettings": {
    "HostName": "localhost" // نام میزبان برای RabbitMQ
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information", // سطح لاگ پیش‌فرض
      "Microsoft": "Warning", // سطح لاگ Microsoft
      "Microsoft.Hosting.Lifetime": "Information" // سطح لاگ زمان حیات میزبانی Microsoft
    }
  },
  "AllowedHosts": "*" // میزبانی‌های مجاز
}